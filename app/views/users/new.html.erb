<% provide(:title, 'Sign Up') %>

<div class="container clearfix">
  <div class="container clearfix">
    <h2 class="form-title">Sign up</h2>
    <p>Want to test out the application? Sign in with email 'fred@fred.com' and password 'test'</p>
    <%= form_for @user do |f| %>
      <%= f.text_field :name, class: 'email', placeholder: 'Name' %>
      <%= f.text_field :email, class: 'email', placeholder: 'Email' %>
      <%= f.password_field :password, class: 'password', placeholder: 'Password' %>
      <%= f.password_field :password_confirmation, class: 'password', placeholder: 'Confirm Password' %>
    <%= submit_tag 'Sign In', class: 'sign_in' %>
    <% end %>
  </div>
</div>